{
    "tasks": [
        {
            "type": "process",
            "label": "Clean",
            "command": "rm",
            "args": [
                "-r",
                "-f",
                "build/"
            ]
        },
        {
            "type": "process",
            "label": "CMake Build",
            "command": "cmake",
            "args": [
                "-D",
                "CMAKE_MAKE_PROGRAM:PATH=C:/MinGW64/bin/make.exe",
                "-G",
                "MinGW Makefiles",
                "-B",
                "./build"
            ],
            "detail": "Cmake Build"
        }, 
        {
            "type": "process",
            "label": "Make Build",
            "command": "make",
            "args": [
                "-C",
                "./build"
            ],
            "dependsOn":[
                "CMake Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build CMake Project",
            "problemMatcher":"$gcc"
        }
    ],
    "version": "2.0.0"
}